<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/size05"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/size15"
        android:orientation="vertical"
        android:id="@+id/constraintLayout2"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/backgRound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/size10"
            android:id="@+id/textviewitem1"
            android:layout_marginTop="@dimen/size20"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i have to visit a family function"
        />
        <TextView
            android:textSize="@dimen/size15"
            android:layout_marginTop="@dimen/size10"
            android:textStyle="bold"
            android:textColor="#515151"
            android:id="@+id/textviewitem2"
            app:layout_constraintTop_toBottomOf="@id/textviewitem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wed,16 feb"
        />
        <TextView
            android:layout_marginTop="@dimen/size10"
            android:textSize="@dimen/size15"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textviewitem3"
            android:textColor="#2B80FF"
            app:layout_constraintTop_toBottomOf="@id/textviewitem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Half day"
        />
        <androidx.appcompat.widget.AppCompatButton
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Pending"
            android:textColor="#FFCD4B"
            android:background="@drawable/buttonstyle"
            android:textSize="@dimen/size10"
            android:id="@+id/textviewitem4"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size30"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textviewitem5"
            android:textSize="@dimen/size10"
            android:layout_marginTop="@dimen/size10"
            android:background="@drawable/buttonstroke"
            app:layout_constraintTop_toBottomOf="@id/textviewitem4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/size90"
            android:layout_height="@dimen/size30"
            android:text="Revoke"
            android:textColor="#4790FF"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>