<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size380"
            android:padding="@dimen/size40"
            android:src="@drawable/changepwd"
         />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Change_Password"
            android:textSize="@dimen/size35"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/crayola"/>
        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/oldPassInputLayout"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size30"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Enter_Your_Password"
                android:id="@+id/oldPassEditText"
                android:inputType="textPassword"
                android:imeOptions="actionNext"
                android:textColorHint="@color/gray"
                android:layout_margin="@dimen/size15"
                android:backgroundTint="@color/gray"/>
        </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/newPassInputLayout"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/NewPassEditText"
                android:layout_height="wrap_content"
                android:hint="@string/Enter_New_Password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:layout_margin="@dimen/size15"
                android:backgroundTint="@color/gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/confirmPassInputLayout"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Confrirm_Your_Password"
                android:id="@+id/confirmPassEditText"
                android:inputType="textPassword"
                android:textColorHint="@color/gray"
                android:layout_marginLeft="@dimen/size15"
                android:imeOptions="actionNext"
                android:layout_marginRight="@dimen/size15"
                android:backgroundTint="@color/gray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:text="@string/Forget_Password"
            android:gravity="right"
            android:id="@+id/Forgetpassword"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/size07"
            android:layout_marginRight="@dimen/size15"
            android:textColor="@color/crayola"
            android:layout_height="wrap_content"/>
   
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:cornerRadius="@dimen/size07"
            android:textAllCaps="false"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:elevation="@dimen/size30"
            android:layout_marginTop="@dimen/size30"
            android:id="@+id/changePasswordBtn"
            android:backgroundTint="@color/crayola"
            android:layout_marginLeft="@dimen/size15"
            android:layout_marginRight="@dimen/size15"
            android:layout_height="@dimen/size60"
            android:text="@string/Change_Password"/>
    </LinearLayout>
  
</ScrollView>