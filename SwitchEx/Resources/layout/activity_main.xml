<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorPrimaryDark">
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WiFi"
        android:checked="false"
        android:id="@+id/switch1"
        android:textColor="@android:color/holo_purple"
        android:layout_marginBottom="20dp"
        android:trackTint="@android:color/holo_red_light"
        android:thumbTint="@android:color/holo_red_dark"/>


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:checked="true"
        android:id="@+id/switch2"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorAccent"
        android:trackTint="@android:color/holo_green_light"
        android:thumbTint="@android:color/holo_green_dark"/>
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch3"
        android:text="Mobile data"
        android:checked="false"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/holo_purple"
        android:trackTint="@android:color/holo_orange_light"
        android:thumbTint="@android:color/holo_orange_dark"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch4"
        android:text="Aeroplane mode"
        android:checked="true"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorAccent"
        android:trackTint="@android:color/holo_green_light"
        android:thumbTint="@android:color/holo_green_dark"/>

</LinearLayout>