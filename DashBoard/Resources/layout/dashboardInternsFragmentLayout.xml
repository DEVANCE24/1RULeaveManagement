<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bacgroundWhite">

    <TextView
        android:layout_width="148dp"
        android:id="@+id/textViewdashboardInterns"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_height="34dp"
        android:text="@string/dashboard"
        android:textSize="28sp"
        android:textColor="@color/blue"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLeaveRequest"
        android:layout_width="174dp"
        android:layout_height="144dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewdashboardInterns">

        <ImageView
            android:id="@+id/imageViewLeaveRequest"
            android:layout_width="110dp"
            android:layout_height="79dp"
            android:src="@drawable/ic_bluebackground"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="36dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            
            android:id="@+id/textViewTotalLeaveRequest"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/lightBlue"
            android:text="@string/minValueText00"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp"/>

        <ProgressBar
            android:id="@+id/progressBarLeaveRequest"
            android:layout_width="70dp"
            android:layout_height="70dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/progressbarblue"/>

        <TextView
            android:layout_width="122dp"
            android:layout_height="19dp"
            android:layout_gravity="bottom"
            android:text="@string/leaveRequest"
            android:textSize="16sp"
            android:layout_marginHorizontal="31dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:id="@+id/textViewLeaveRequest" />
    </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWfhRequest"
        android:layout_width="174dp"
        android:layout_height="144dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toRightOf="@id/cardViewLeaveRequest"
        app:layout_constraintTop_toBottomOf="@+id/textViewdashboardInterns"
        android:layout_marginLeft="16dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="79dp"
            android:src="@drawable/ic_redbackground"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="36dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageViewWfhRequest"/>

        <TextView
            
            android:id="@+id/textViewTotalWfhRequest"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/lightRed"
            android:text="@string/minValueText00"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="14dp"/>

          <ProgressBar
            
            android:id="@+id/progressBarWfhRequest"
            android:layout_width="70dp"
            android:layout_height="70dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:indeterminate="false"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="12dp"
            android:progress="0"
            android:max="100"
            android:progressDrawable="@drawable/progressbarred"/>

        <TextView
            android:layout_width="122dp"
            android:layout_height="19dp"
            android:layout_gravity="bottom"
            android:text="@string/wfhRequests"
            android:textSize="16sp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:id="@+id/textViewWfhRequest" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLeaveStatus"
        android:layout_width="364dp"
        android:layout_height="213dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewLeaveRequest">

        
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="top"
            android:text="@string/leaveStatus"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:id="@+id/textViewLeaveStatus" />
        
        <app.futured.donut.DonutProgressView
            android:id="@+id/donut_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:donut_bgLineColor="@color/cloud"
            app:donut_gapWidth="20"
            app:donut_gapAngle="270"
            app:donut_strokeWidth="16dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="right"
            android:layout_marginRight="137dp"
            android:layout_marginTop="59dp">

         <ImageView
            
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shape_circle_yellow"
            android:id="@+id/imagViewPendingRequest"/>

         <TextView
            
            android:id="@+id/textViewTotalPendingRequest"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:text="@string/minValueText00"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="7dp"/>

       
         </RelativeLayout>

        <TextView
            android:id="@+id/textViewPendingRequest"
            android:layout_width="98dp"
            android:layout_height="15dp" 
            android:text="@string/pendingRequest"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="29dp"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="12dp"/>
        
         <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="137dp"
            android:layout_marginTop="109dp">
            <ImageView
            
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shape_cirle_red"
                android:id="@+id/imagViewRejectRequest"/>

            <TextView
            
                android:id="@+id/textViewTotalRejectRequest"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="@string/minValueText00"
                android:textColor="@color/lightRed"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="7dp"/>

        </RelativeLayout>
        
        <TextView
            android:id="@+id/textViewRejectRequest"
            android:layout_width="98dp"
            android:layout_height="15dp" 
            android:text="@string/rejectRequest"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="29dp"
            android:layout_marginTop="117dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="137dp"
            android:layout_marginTop="159dp">   
            <ImageView
            
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shape_circle_blue"
                android:id="@+id/imagViewAcceptedRequest"/>
            <TextView
            
                android:id="@+id/textViewTotalAcceptedRequest"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="@string/minValueText00"
                android:textColor="@color/lightBlue"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="7dp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/textViewAcceptedRequest"
            android:layout_width="wrap_content"
            android:layout_height="15dp" 
            android:text="@string/acceptedRequest"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginRight="29dp"
            android:layout_marginTop="167dp"/>
    
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewListOfHolidays"
        android:layout_width="364dp"
        android:layout_height="279dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewLeaveStatus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_gravity="top"
            android:text="@string/listOfHolidays"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="26dp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"
            android:id="@+id/textViewListOfHolidays" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHolidayList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="63dp"/>
          

     </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        
        android:id="@+id/actionFloatingButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_applyleave"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout >
